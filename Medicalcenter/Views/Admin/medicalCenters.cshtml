<h2  style="margin-top: 12px;margin-left: 130px;">medicalCenters</h2>
<div class="col-xl-6">
    <div class="card spur-card" style="width:1100px;margin-left: 100px;">
        <div class="card-header">
            <div class="spur-card-icon">
                <i class="fas fa-bell"></i>
            </div>
            <div class="spur-card-title"> Medical Centers </div>
            <div style="background-color: ;width:650px; height:10px"></div>
            <button type="button" data-toggle="modal" data-target="#myModal2" style="right:100px" class="btn btn-info">ADD Center</button>

        </div>

        <table class="table table-hover" style="width:1100px">
            <thead>
                <tr>

                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>

                    <th scope="col">Address</th>
                    <th scope="col">telphone</th>
                    <th scope="col">description</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in ViewBag.medicalCenters)
                {
                    <tr>

                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.adderess</td>
                        <td>@item.telphone</td>
                        <td>@item.discription</td>
                        <td>@Html.ActionLink("delete", "delete", "Admin", new { id = item.ID, n = "M" }, new { @class = "btn btn-info" }) |</td>
                        <td><button type="button" onclick="myfunc2('@item.ID','@item.Name','@item.Email','@item.adderess','@item.telphone','@item.fax','@item.discription','@item.Image')" class="btn btn-secondary" data-toggle="modal" data-target="#myModal3">update</button></td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
