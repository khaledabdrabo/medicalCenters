                            </li>
                            <li>
                                <a href="">رابط نصى</a>
                            </li>
                            <li>
                                <a href="">رابط نصى</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="footer-form">
                        <h4>
                            <i class="fa fa-envelope"></i>
                            النشرة البريدية
                        </h4>
                        <p>اشترك بالنشره البريديه ليصلك جديد زفين </p>
                        @using (Html.BeginForm("subscribe", "Home", FormMethod.Post))
                        {
                            <form action="">
                                <div class="form-group">
                                    <input type="text" name="Email" placeholder="ادخل بريدك الالكترونى هنا">
                                </div>
                                <button type="submit" class="btn btn-danger">اشتراك</button>
                            </form>
                        }

                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="footer-logo">
                        <img class="img-responsive" src="~/Content/images/404-icon.png" alt="logo">
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <div class="bottom-footer clearfix">
        <div class="col-xs-12">
            <div class="left">
                <p>تصميم وتطوير </p>
            </div>
            <div class="right">
                <p>جميع الحقوق محفوظه لدي موقع طبي لسنة 2019</p>
            </div>
        </div>
    </div>
    <!-- end footer -->
    <script src="~/Content/js/jquery-3.1.0.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/owl.carousel.js"></script>
    <script src="~/Content/js/foundation-datepicker.js"></script>
    <script src="~/Content/js/plugin.js"></script>
</body>

</html>